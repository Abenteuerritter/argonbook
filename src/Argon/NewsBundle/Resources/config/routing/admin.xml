<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
                        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_news" path="/news" methods="GET">
        <default key="_controller">ArgonNewsBundle:Admin\Post:index</default>
    </route>
    <route id="admin_news_new" path="/news/new" methods="GET">
        <default key="_controller">ArgonNewsBundle:Admin\Post:new</default>
    </route>
    <route id="admin_news_create" path="/news/create" methods="POST">
        <default key="_controller">ArgonNewsBundle:Admin\Post:new</default>
    </route>
    <route id="admin_news_view" path="/news/{slug}" methods="GET">
        <default key="_controller">ArgonNewsBundle:Admin\Post:view</default>
    </route>
    <route id="admin_news_publish" path="/news/{slug}/publish" methods="GET,POST">
        <default key="_controller">ArgonNewsBundle:Admin\Post:publish</default>
    </route>
    <route id="admin_news_edit" path="/news/{slug}/edit" methods="GET">
        <default key="_controller">ArgonNewsBundle:Admin\Post:edit</default>
    </route>
    <route id="admin_news_update" path="/news/{slug}/update" methods="POST">
        <default key="_controller">ArgonNewsBundle:Admin\Post:edit</default>
    </route>
</routes>