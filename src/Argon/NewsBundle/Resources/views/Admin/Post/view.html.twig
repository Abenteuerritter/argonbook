{% extends "ArgonWebBundle::layout_admin.html.twig" %}
{% set active = "news" %}

{% block title %}{{ parent() }} - {{ "admin.news.news"|trans }} - {{ post }}{% endblock %}

{% block top %}
<nav aria-label="{{ "admin.you_are_here"|trans }}" role="navigation">
  <ul class="breadcrumbs">
    <li><a href="{{ path("admin_dashboard") }}">{{ "admin.dashboard.title"|trans }}</a></li>
    <li><a href="{{ path("admin_news") }}">{{ "admin.news.news"|trans }}</a></li>
    <li>{{ post }}</li>
  </ul>
</nav>
{% endblock %}

{% block content %}
<dl>
  <dt>{{ "admin.news.title"|trans }}</dt>
  <dd>{{ post.title }}</dd>

  <dt>{{ "admin.news.status"|trans }}</dt>
  <dd>
  {% if post.isPublished %}
    {{ "admin.news.published_at"|trans({"%date%": post.publishedAt|date}) }}
  {% else %}
    {{ "admin.news.draft"|trans }}
  {% endif %}
  </dd>

  <dt>{{ "admin.news.creator"|trans }}</dt>
  <dd>
    <abbr title="{{ post.creator.username }}">{{ post.creator.name|default(post.creator.username) }}</abbr>
  </dd>

  <dt>{{ "admin.news.body"|trans }}</dt>
  <dd>{{ post.body|nl2br }}</dd>
</dl>
<ul>
  {% if not post.isPublished %}
    <li><a href="{{ path("admin_news_publish", {"slug": post.slug}) }}">{{ "admin.news.publish"|trans }}</a></li>
  {% endif %}
  <li><a href="{{ path("admin_news_edit", {"slug": post.slug}) }}">{{ "admin.news.edit"|trans }}</a></li>
</ul>
{% endblock %}