{% set active = 'skill' %}
{% extends 'ArgonWebBundle::Admin/layout.html.twig' %}
{% trans_default_domain 'admin' %}

{% block title %}{{ parent() }} - {{ 'skill.title'|trans }} - {{ entity }}{% endblock %}

{% block content %}
<ol class="breadcrumb">
    <li><a href="{{ path('admin_dashboard') }}">{{ 'dashboard.title'|trans }}</a></li>
    <li><a href="{{ path('admin_skill') }}">{{ 'skill.title'|trans }}</a></li>
    <li class="active">{{ entity }}</li>
</ol>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.ability'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">
                {% if entity.abilityCode %}
                    <abbr title="{{ entity.abilityCode }}">{{ ('character_ability.types.' ~ entity.abilityCode)|trans({}, 'forms') }}</abbr>
                {% else %}
                    {{ 'skill.ability_empty'|trans }}
                {% endif %}
            </p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.code'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.code }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.name'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.name }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.modifier'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.modifier }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.max'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.max|default('skill.max_empty'|trans) }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.parent'|trans }}</label>
        <div class="col-sm-10">
            {% if entity.parent %}
                <p class="form-control-static"><a href="{{ path('admin_skill_view', {'code': entity.parent.code}) }}">{{ entity.parent }}</a></p>
            {% else %}
                <p class="form-control-static">{{ 'skill.parent_empty'|trans }}</p>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'skill.children'|trans }}</label>
        <div class="col-sm-10">
            {{ include('ArgonGameBundle:Partial\\Skill:list.html.twig', {'entities': entities}) }}
        </div>
    </div>
</div>
{% endblock %}