{% set active = 'race' %}
{% extends 'ArgonWebBundle::Admin/layout.html.twig' %}
{% trans_default_domain 'admin' %}

{% block title %}{{ parent() }} - {{ 'race.title'|trans }} - {{ entity.code }}{% endblock %}

{% block content %}
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'race.code'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.code }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'race.name'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.name }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'race.multiplier'|trans }}</label>
        <div class="col-sm-10">
            <p class="form-control-static">{{ entity.multiplier }}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'race.children'|trans }}</label>
        <div class="col-sm-10">
            {{ include('ArgonGameBundle:Admin/Race:list.html.twig', {'entities': entities}) }}
        </div>
    </div>
</div>
{% endblock %}