<table>
  <thead>
    <tr>
      <th>{{ "character.info"|trans }}</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  {% for character in entities %}
    <tr>
      <td>
        {{ character.game.info.fullname }} / <a href="{{ path("character_view", {"slug": character.slug}) }}">{{ character.name }}</a> ({{ character.skillsExperience }}/{{ character.experience }})<br>
        {{ character.race }}
      </td>
      <td>
        <div class="button-group align-right">
          <a href="{{ path("character_view", {"slug": character.slug, "_switch": character.slug}) }}" class="warning button">{{ "character.switch"|trans }}</a>
          <a href="{{ path("character_skills", {"slug": character.slug}) }}" class="button">{{ "character.skills"|trans }}</a>
          <a href="{{ path("character_edit", {"slug": character.slug}) }}" class="button">{{ "character.edit"|trans }}</a>
        </div>
      </td>
    </tr>
  {% else %}
    <tr class="warning">
      <td colspan="2">{{ "character.empty"|trans }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
