<div class="card">
  <div class="card-section">
    {{ render(controller("ArgonGameBundle:Block:characterNick", {"character": character})) }}
    (
      <span class="fi-graph-bar"></span>
      <span class="experience">{{ character.skillsExperience }}/{{ character.experience }}</span>
    )
    <br>
    {{ character.race }}
    {% if show_switch is defined and show_switch %}
      <a href="{{ path("character_view", {"slug": character.slug, "_switch": character.slug}) }}" class="button-switch button">{{ "character.switch"|trans }}</a>
    {% endif %}
  </div>
</div>
