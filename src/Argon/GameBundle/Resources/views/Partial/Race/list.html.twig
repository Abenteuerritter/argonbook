<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ 'race.name'|trans({}, 'admin') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for race in entities %}
        <tr>
            <td><a href="{{ path('admin_race_view', {'code': race.code}) }}" title="{{ race.code }}">{{ race.name|default(race.code) }}</a></td>
        </tr>
    {% else %}
        <tr class="warning">
            <td colspan="1">{{ 'race.empty'|trans({}, 'admin') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
