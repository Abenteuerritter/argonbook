<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
                        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="game" path="/games" methods="GET">
        <default key="_controller">ArgonGameBundle:Game:index</default>
    </route>
    <route id="game_view" path="/game/{slug}" methods="GET">
        <default key="_controller">ArgonGameBundle:Game:view</default>
        <requirement key="slug">[-\w]+:[-\w]+</requirement>
    </route>
</routes>