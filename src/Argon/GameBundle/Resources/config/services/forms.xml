<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- ChoiceList -->
        <service id="argon_game.form.game_choice_list" class="Argon\GameBundle\Form\ChoiceList\GameChoiceList">
            <argument type="service" id="argon_game.provider.game_factory" />
        </service>

        <!-- Forms -->
        <service id="argon_game.form.character" class="Argon\GameBundle\Form\Type\CharacterType">
            <tag name="form.type" alias="character" />
        </service>
        <service id="argon_game.form.character_experience" class="Argon\GameBundle\Form\Type\CharacterExperienceType">
            <tag name="form.type" alias="character_experience" />
        </service>
        <service id="argon_game.form.character_ability" class="Argon\GameBundle\Form\Type\CharacterAbilityType">
            <tag name="form.type" alias="character_ability" />
        </service>
        <service id="argon_game.form.character_skill" class="Argon\GameBundle\Form\Type\CharacterSkillType">
            <tag name="form.type" alias="character_skill" />
        </service>

        <service id="argon_game.form.character_game" class="Argon\GameBundle\Form\Character\CharacterGameType">
            <argument type="service" id="argon_game.form.game_choice_list" />
            <tag name="form.type" alias="character_game" />
        </service>
        <service id="argon_game.form.character_skilsl" class="Argon\GameBundle\Form\Character\CharacterSkillsType">
            <tag name="form.type" alias="character_skills" />
        </service>
    </services>
</container>