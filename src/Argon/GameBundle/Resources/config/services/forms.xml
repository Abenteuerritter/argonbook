<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="argon_game.form.character" class="Argon\GameBundle\Form\Type\CharacterType">
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_filter" class="Argon\GameBundle\Form\Type\CharacterFilterType">
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_experience" class="Argon\GameBundle\Form\Type\CharacterExperienceType">
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_ability" class="Argon\GameBundle\Form\Type\CharacterAbilityType">
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_skill" class="Argon\GameBundle\Form\Type\CharacterSkillType">
            <tag name="form.type" />
        </service>

        <service id="argon_game.form.character_edit" class="Argon\GameBundle\Form\Character\CharacterEditType">
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_game" class="Argon\GameBundle\Form\Character\CharacterGameType">
            <argument type="expression">service('argon_game.provider.game_factory').getGames()</argument>
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_skills" class="Argon\GameBundle\Form\Character\CharacterSkillsType">
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_username" class="Argon\GameBundle\Form\Character\CharacterUsernameType">
            <argument type="service" id="argon_game.character_to_username_transformer" />
            <tag name="form.type" />
        </service>
        <service id="argon_game.form.character_story_confirm" class="Argon\GameBundle\Form\Character\CharacterStoryConfirmType">
            <tag name="form.type" />
        </service>
    </services>
</container>