<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="argon_game.validator.character_ability_sequence" class="Argon\GameBundle\Validator\Constraints\CharacterAbilitySequenceValidator">
            <tag name="validator.constraint_validator" alias="character_ability_sequence" />
        </service>
        <service id="argon_game.validator.character_skill_max" class="Argon\GameBundle\Validator\Constraints\CharacterSkillMaxValidator">
            <tag name="validator.constraint_validator" alias="character_skill_max" />
        </service>
        <service id="argon_game.validator.character_skills_enough_experience" class="Argon\GameBundle\Validator\Constraints\CharacterSkillsEnoughExperienceValidator">
            <tag name="validator.constraint_validator" alias="character_skills_enough_experience" />
        </service>
    </services>
</container>