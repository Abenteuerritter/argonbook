<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Argon\GameBundle\Entity\Race" table="race">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <unique-constraints>
            <unique-constraint columns="code" name="code_idx" />
        </unique-constraints>
        <one-to-many field="children" target-entity="Argon\GameBundle\Entity\Race" mapped-by="parent" />
        <many-to-one field="parent" target-entity="Argon\GameBundle\Entity\Race" inversed-by="children" />
        <field name="code" column="code" type="string" length="8" />
        <field name="name" column="name" type="string" length="60" />
        <field name="modifier" column="modifier" type="integer" />
    </entity>
</doctrine-mapping>