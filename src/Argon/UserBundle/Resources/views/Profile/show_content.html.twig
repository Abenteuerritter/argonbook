<div class="profile media-object">
  {#}
  <div class="media-object-section">
    <div class="thumbnail">
      <img src="{{ asset(user.imagePath) }}" alt="{{ user.username }}">
    </div>
  </div>
  {#}
  <div class="media-object-section main-section">
    <h4>{{ user.name|default(user.username) }}
      {% if user.name %}
        <small>{{ user.username }}</small>
      {% endif %}
    </h4>
  </div>
</div>
<p>
  <a href="{{ path("fos_user_profile_edit") }}" class="expanded button">{{ "profile.edit.submit"|trans }}</a>
  <a href="{{ path("fos_user_change_password") }}" class="expanded button">{{ "change_password.submit"|trans }}</a>
</p>
