<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Argon\MessageBundle\Entity\Message" table="message">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <many-to-one field="sender" target-entity="Argon\GameBundle\Entity\Character" />
        <many-to-one field="thread" target-entity="Argon\MessageBundle\Entity\Thread">
            <join-columns>
                <join-column name="thread_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>
        <one-to-many field="metadata" target-entity="Argon\MessageBundle\Entity\MessageMetadata" mapped-by="message">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>